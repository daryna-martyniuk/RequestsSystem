<Window x:Class="Requests.UI.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Requests.UI.ViewModels"
        xmlns:views="clr-namespace:Requests.UI.Views"
        mc:Ignorable="d"
        Title="Requests System" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" Background="{StaticResource BackgroundLight}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MyWorkspaceViewModel}">
            <views:MyWorkspaceView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <views:AdminView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Хедер -->
            <RowDefinition Height="*"/>
            <!-- Контент (Вкладка) -->
        </Grid.RowDefinitions>

        <!-- ХЕДЕР -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Height="70" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Лого -->
                    <ColumnDefinition Width="*"/>
                    <!-- Меню Вкладок -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Профіль -->
                </Grid.ColumnDefinitions>

                <!-- Лого -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
                    <TextBlock Text="REQUESTS" Foreground="{StaticResource TextPrimary}" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text=".SYS" Foreground="{StaticResource PrimaryBlue}" FontSize="22" FontWeight="Bold"/>
                </StackPanel>

                <!-- Меню (Центр) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- ДЛЯ ВСІХ -->
                    <Button Content="Дашборд" Command="{Binding ShowWorkspaceCommand}" Style="{StaticResource NavButtonStyle}"/>

                    <!-- ДЛЯ АДМІНА (3 окремі кнопки замість однієї "Адміністрування") -->
                    <Button Content="Користувачі" Command="{Binding ShowUsersCommand}" 
                    Visibility="{Binding IsAdminVisible}" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Структура" Command="{Binding ShowStructureCommand}" 
                    Visibility="{Binding IsAdminVisible}" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Логи" Command="{Binding ShowLogsCommand}" 
                    Visibility="{Binding IsAdminVisible}" Style="{StaticResource NavButtonStyle}"/>

                    <!-- ДЛЯ ДИРЕКТОРА -->
                    <Button Content="Всі запити" Command="{Binding ShowAllRequestsCommand}" 
                    Visibility="{Binding IsDirectorVisible}" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Статистика" Command="{Binding ShowStatsCommand}" 
                    Visibility="{Binding IsDirectorVisible}" Style="{StaticResource NavButtonStyle}"/>

                    <!-- ДЛЯ КЕРІВНИКА (якщо треба) -->
                    <!-- <Button Content="Моя команда" ... Visibility="{Binding IsManagerVisible}"/> -->
                </StackPanel>

                <!-- Профіль (Праворуч) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,30,0">
                    <StackPanel VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock Text="{Binding UserName}" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding UserRole}" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <Button Content="⚙" Command="{Binding EditProfileCommand}" Style="{StaticResource NavButtonStyle}" Padding="10" ToolTip="Профіль"/>
                    <Button Content="Вихід" Command="{Binding LogoutCommand}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource DangerRed}" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ЗМІННИЙ КОНТЕНТ -->
        <Border Grid.Row="1" Margin="20" Background="{StaticResource CardBackground}" CornerRadius="10" Effect="{StaticResource CardShadow}">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>