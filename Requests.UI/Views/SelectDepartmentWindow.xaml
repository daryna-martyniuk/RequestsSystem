<Window x:Class="Requests.UI.Views.SelectDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оберіть відділ" Height="300" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True">

    <Border BorderBrush="#3498DB" BorderThickness="1" CornerRadius="10" Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Оберіть відділ для пересилання:" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

            <ComboBox Grid.Row="1" x:Name="DepartmentsCombo" DisplayMemberPath="Name" VerticalAlignment="Top" Height="35" Padding="5"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Скасувати" IsCancel="True" Click="Cancel_Click" 
                        Background="Transparent" Foreground="#7F8C8D" BorderThickness="0" Margin="0,0,10,0"/>

                <Button Content="Переслати" IsDefault="True" Click="Select_Click" 
                        Background="#3498DB" Foreground="White" BorderThickness="0" Padding="20,10">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>