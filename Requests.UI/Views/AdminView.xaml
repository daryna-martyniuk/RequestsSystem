<UserControl x:Class="Requests.UI.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">

        <!-- 1. КОРИСТУВАЧІ -->
        <Grid Visibility="{Binding IsUsersVisible}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Хедер вкладки -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Співробітники" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Управління обліковими записами" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <!-- Пошук -->
                <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="30,0" VerticalAlignment="Center" Tag="Пошук..." Height="40" Padding="10,0"/>

                <!-- Кнопка Бекапу -->
                <Button Grid.Column="2" Content="💾 Бекап" Command="{Binding BackupCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}" Margin="0,0,10,0"/>

                <Button Grid.Column="3" Content="+ Створити" Command="{Binding CreateUserCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource SuccessGreen}"/>
            </Grid>

            <DataGrid Grid.Row="1" ItemsSource="{Binding UsersView}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTemplateColumn Header="Співробітник" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="{Binding Email}" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="120"/>
                    <DataGridTextColumn Header="Відділ" Binding="{Binding Department.Name}" Width="150"/>
                    <DataGridTextColumn Header="Посада" Binding="{Binding Position.Name}" Width="150"/>

                    <DataGridTemplateColumn Header="Статус" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsActive}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Дії" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✎" Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource PrimaryBlue}" Padding="5,0" Height="30"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- 2. СТРУКТУРА -->
        <Grid Visibility="{Binding IsStructureVisible}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Структура компанії" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Керування відділами та посадами" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="💾 Бекап БД" Command="{Binding BackupCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Відділи -->
                <Border Grid.Column="0" Background="{StaticResource BackgroundLight}" CornerRadius="10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="🏢 Відділи" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewDepartmentName, UpdateSourceTrigger=PropertyChanged}" Tag="Назва відділу..." Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="Додати" Command="{Binding CreateDepartmentCommand}" Style="{StaticResource ActionBtnStyle}" Width="80"/>
                        </Grid>

                        <ListBox Grid.Row="2" ItemsSource="{Binding Departments}" BorderThickness="0" Background="Transparent" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,5" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Id}" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" FontSize="15" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>

                                            <!-- Кнопки дій для Відділу -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="✎" ToolTip="Редагувати" 
                                                        Command="{Binding DataContext.EditDepartmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource PrimaryBlue}" 
                                                        Padding="0" Width="30" Height="30" Margin="0,0,5,0"/>
                                                <Button Content="🗑" ToolTip="Видалити" 
                                                        Command="{Binding DataContext.DeleteDepartmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource DangerRed}" 
                                                        Padding="0" Width="30" Height="30"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Посади -->
                <Border Grid.Column="2" Background="{StaticResource BackgroundLight}" CornerRadius="10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="💼 Посади" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewPositionName, UpdateSourceTrigger=PropertyChanged}" Tag="Назва посади..." Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="Додати" Command="{Binding CreatePositionCommand}" Style="{StaticResource ActionBtnStyle}" Width="80"/>
                        </Grid>

                        <ListBox Grid.Row="2" ItemsSource="{Binding Positions}" BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,5" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Id}" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" FontSize="15" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>

                                            <!-- Кнопки дій для Посади -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="✎" ToolTip="Редагувати" 
                                                        Command="{Binding DataContext.EditPositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource PrimaryBlue}" 
                                                        Padding="0" Width="30" Height="30" Margin="0,0,5,0"/>
                                                <Button Content="🗑" ToolTip="Видалити" 
                                                        Command="{Binding DataContext.DeletePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource DangerRed}" 
                                                        Padding="0" Width="30" Height="30"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- 3. ЛОГИ -->
        <Grid Visibility="{Binding IsLogsVisible}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Журнал подій" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Історія дій користувачів" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
                <Button Grid.Column="1" Content="💾 Бекап БД" Command="{Binding BackupCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}"/>
            </Grid>

            <DataGrid Grid.Row="1" ItemsSource="{Binding SystemLogs}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Час" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="180" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Юзер ID" Binding="{Binding UserId}" Width="80"/>
                    <DataGridTextColumn Header="Дія" Binding="{Binding Action}" Width="*"/>
                    <DataGridTextColumn Header="Ref ID" Binding="{Binding RequestId}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>