<UserControl x:Class="Requests.UI.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="20">

        <!-- 1. КОРИСТУВАЧІ -->
        <Grid Visibility="{Binding IsUsersVisible}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Статистика -->
                <RowDefinition Height="Auto"/>
                <!-- Хедер -->
                <RowDefinition Height="*"/>
                <!-- Таблиця -->
            </Grid.RowDefinitions>

            <!-- Статистика (Картки) -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="{StaticResource PrimaryBlue}" CornerRadius="8" Padding="15,10" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="20" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="{Binding TotalUsersCount}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Всього співробітників" FontSize="11" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{StaticResource SuccessGreen}" CornerRadius="8" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✅" FontSize="20" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="{Binding ActiveUsersCount}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Активні акаунти" FontSize="11" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Інструменти -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Пошук та Фільтр -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Tag="Пошук (ПІБ, Логін, Посада)..." Height="40" Width="300" Padding="10,0"/>

                    <CheckBox IsChecked="{Binding ShowOnlyActiveUsers}" Content="Тільки активні" 
                              VerticalAlignment="Center" Margin="15,0,0,0" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <!-- Кнопка Бекапу -->
                <Button Grid.Column="2" Content="💾 Бекап" Command="{Binding BackupCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}" Margin="10,0,10,0"/>

                <Button Grid.Column="3" Content="+ Створити" Command="{Binding CreateUserCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource SuccessGreen}"/>
            </Grid>

            <!-- Таблиця (БЕЗ ID) -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding UsersView}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Співробітник" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="{Binding Email}" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Логін" Binding="{Binding Username}" Width="120"/>
                    <DataGridTextColumn Header="Відділ" Binding="{Binding Department.Name}" Width="150"/>
                    <DataGridTextColumn Header="Посада" Binding="{Binding Position.Name}" Width="150"/>

                    <DataGridTemplateColumn Header="Статус" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsActive}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridCheckBoxColumn Header="Адмін" Binding="{Binding IsSystemAdmin}" Width="60" IsReadOnly="True"/>

                    <DataGridTemplateColumn Header="Дії" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✎" Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource PrimaryBlue}" Padding="5,0" Height="30"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- 2. СТРУКТУРА -->
        <Grid Visibility="{Binding IsStructureVisible}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- ВЕРХ: Посади -->
                <RowDefinition Height="*"/>
                <!-- НИЗ: Відділи та Співробітники -->
            </Grid.RowDefinitions>

            <!-- ВЕРХНЯ ЧАСТИНА: СПИСОК ПОСАД -->
            <Border Grid.Row="0" Background="{StaticResource BackgroundLight}" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="💼 Посади" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="{Binding PositionsCount, StringFormat='Всього посад: {0}'}" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Список Посад (Тільки перегляд) -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding Positions}" BorderThickness="0" Background="Transparent" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="15" Padding="15,8" Margin="0,0,10,10" BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1">
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="{StaticResource PrimaryBlue}"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- НИЖНЯ ЧАСТИНА: ВІДДІЛИ ТА ДЕТАЛІ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <!-- Зліва: Відділи -->
                    <ColumnDefinition Width="20"/>
                    <!-- Відступ -->
                    <ColumnDefinition Width="*"/>
                    <!-- Справа: Деталі -->
                </Grid.ColumnDefinitions>

                <!-- ВІДДІЛИ -->
                <Border Grid.Column="0" Background="{StaticResource BackgroundLight}" CornerRadius="10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="🏢 Відділи" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,15"/>

                        <!-- Додавання Відділу -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewDepartmentName, UpdateSourceTrigger=PropertyChanged}" Tag="Назва відділу..." Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="+" Command="{Binding CreateDepartmentCommand}" Style="{StaticResource ActionBtnStyle}" Width="40"/>
                        </Grid>

                        <!-- Список Відділів -->
                        <ListBox Grid.Row="2" ItemsSource="{Binding Departments}" SelectedItem="{Binding SelectedDepartment}"
                                 BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="5" Padding="12,8" Margin="0,0,0,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="15" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>

                                            <!-- Кнопка Редагування -->
                                            <Button Grid.Column="1" Content="✎" ToolTip="Редагувати назву" 
                                                    Command="{Binding DataContext.EditDepartmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ActionBtnStyle}" Background="Transparent" Foreground="{StaticResource PrimaryBlue}" 
                                                    Padding="5,0" BorderThickness="0" FontWeight="Bold" FontSize="16"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- СПІВРОБІТНИКИ ОБРАНОГО ВІДДІЛУ -->
                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Склад відділу" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="{Binding SelectedDepartment.Name, TargetNullValue='Оберіть відділ зі списку'}" 
                                       FontSize="16" Foreground="{StaticResource PrimaryBlue}" FontWeight="SemiBold" Margin="0,5,0,0"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding DepartmentEmployees}" AutoGenerateColumns="False" IsReadOnly="True" BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ПІБ" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Посада" Binding="{Binding Position.Name}" Width="180"/>

                                <DataGridTemplateColumn Header="Актив" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsActive}" IsEnabled="False" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Адмін" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSystemAdmin}" IsEnabled="False" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- 3. ЛОГИ -->
        <Grid Visibility="{Binding IsLogsVisible}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Журнал подій" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Історія дій користувачів" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <!-- Пошук в логах -->
                <TextBox Grid.Column="1" Text="{Binding LogsSearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Tag="Пошук (Дія, ID, Дата: 2026-01-30)..." Height="40" Width="300" Padding="10,0" Margin="20,0"/>

                <Button Grid.Column="2" Content="💾 Бекап БД" Command="{Binding BackupCommand}" 
                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}"/>
            </Grid>

            <DataGrid Grid.Row="1" ItemsSource="{Binding LogsView}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Час" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="180" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="80"/>
                    <DataGridTextColumn Header="Дія" Binding="{Binding Action}" Width="*"/>
                    <DataGridTextColumn Header="Ref" Binding="{Binding RequestId}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>