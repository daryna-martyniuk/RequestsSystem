<Window x:Class="Requests.UI.Views.EditNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування" Height="200" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="White" AllowsTransparency="True">

    <Border BorderBrush="#3498DB" BorderThickness="1" CornerRadius="5">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Введіть нову назву:" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                <TextBox x:Name="TxtName" FontSize="14" Padding="5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Скасувати" IsCancel="True" Click="Cancel_Click" 
                            Background="Transparent" Foreground="#7F8C8D" BorderThickness="0" Margin="0,0,10,0"/>
                    <Button Content="Зберегти" IsDefault="True" Click="Save_Click" 
                            Background="#3498DB" Foreground="White" BorderThickness="0" Padding="15,5">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>