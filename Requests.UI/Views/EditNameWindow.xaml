<Window x:Class="Requests.UI.Views.EditNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введення даних" Width="400" SizeToContent="Height"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True">

    <Border BorderBrush="#3498DB" BorderThickness="1" CornerRadius="5" Background="White">
        <Grid Margin="20">
            <StackPanel>
                <!-- Динамічний заголовок/підказка -->
                <TextBlock x:Name="PromptTextBlock" Text="Введіть значення:" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>

                <!-- Поле вводу -->
                <TextBox x:Name="InputTextBox" FontSize="14" Padding="5" 
                         BorderBrush="#BDC3C7" BorderThickness="1"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Скасувати" IsCancel="True" Click="Cancel_Click" 
                            Background="Transparent" Foreground="#7F8C8D" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>

                    <Button Content="Зберегти" IsDefault="True" Click="Save_Click" 
                            Background="#3498DB" Foreground="White" BorderThickness="0" Padding="20,5" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>