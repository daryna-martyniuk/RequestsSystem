<UserControl x:Class="Requests.UI.Views.MyWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Мій робочий простір" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Запити, завдання та погодження" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="↻ Оновити" Command="{Binding RefreshCommand}" Style="{StaticResource NavButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="+ Новий запит" Command="{Binding CreateRequestCommand}" Style="{StaticResource ActionBtnStyle}" Width="150"/>
            </StackPanel>
        </Grid>

        <!-- Вкладки -->
        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" BorderBrush="Transparent" BorderThickness="0,0,0,3" Background="Transparent" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- 1. МОЇ ЗАПИТИ (Я автор) -->
            <TabItem Header="Мої запити">
                <DataGrid ItemsSource="{Binding MyRequests}" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal"
                          Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="45">
                    <DataGrid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding OpenDetailsCommand}" CommandParameter="{Binding}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Тема" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Категорія" Binding="{Binding Category.Name}" Width="150"/>
                        <DataGridTemplateColumn Header="Статус" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundLight}" CornerRadius="10" Padding="10,2">
                                        <TextBlock Text="{Binding GlobalStatus.Name}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Створено" Binding="{Binding CreatedAt, StringFormat='dd.MM.yyyy HH:mm'}" Width="140"/>
                        <DataGridTextColumn Header="Дедлайн" Binding="{Binding Deadline, StringFormat='dd.MM.yyyy'}" Width="100"/>

                        <DataGridTemplateColumn Header="Дії" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="👁" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                Style="{StaticResource ActionBtnStyle}" Background="{StaticResource TextSecondary}" Padding="0" Width="30" Height="30" Margin="0,0,5,0" ToolTip="Переглянути"/>
                                        <Button Content="✎" Command="{Binding DataContext.EditRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}" Padding="0" Width="30" Height="30" Margin="0,0,5,0" ToolTip="Редагувати"/>
                                        <Button Content="✕" Command="{Binding DataContext.DeleteRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource DangerRed}" Padding="0" Width="30" Height="30" ToolTip="Видалити"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 2. ВХІДНІ ЗАДАЧІ ВІДДІЛУ (Тільки для Керівника) -->
            <TabItem Header="Вхідні задачі" Visibility="{Binding ManagerVisibility}">
                <DataGrid ItemsSource="{Binding IncomingDepartmentTasks}" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal"
                          Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding RequestId}" Width="50"/>
                        <DataGridTextColumn Header="Тема запиту" Binding="{Binding Request.Title}" Width="*"/>
                        <DataGridTextColumn Header="Пріоритет" Binding="{Binding Request.Priority.Name}" Width="100" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Автор" Binding="{Binding Request.Author.FullName}" Width="150"/>
                        <DataGridTemplateColumn Header="Управління" Width="320">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="👁" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                Style="{StaticResource ActionBtnStyle}" Background="{StaticResource TextSecondary}" Width="30" Height="30" Margin="0,0,5,0" ToolTip="Переглянути"/>
                                        <Button Content="Призначити" Command="{Binding DataContext.AssignExecutorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                Style="{StaticResource ActionBtnStyle}" FontSize="12" Height="30" Margin="0,0,5,0"/>
                                        <Button Content="➤ Переслати" Command="{Binding DataContext.ForwardTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                Style="{StaticResource ActionBtnStyle}" Background="{StaticResource WarningOrange}" FontSize="12" Height="30" Margin="0,0,5,0"/>
                                        <Button Content="💬 Обг." Command="{Binding DataContext.DiscussTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                Style="{StaticResource ActionBtnStyle}" Background="{StaticResource TextSecondary}" FontSize="12" Height="30"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 3. НА ПОГОДЖЕННЯ (Тільки для Керівника) -->
            <TabItem Header="На погодження" Visibility="{Binding ManagerVisibility}">
                <Grid>
                    <TextBlock Text="Немає запитів на погодження" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#BDC3C7" FontSize="16">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PendingApprovals.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <DataGrid ItemsSource="{Binding PendingApprovals}" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal"
                              Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Тема" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding CreatedAt, StringFormat='dd.MM HH:mm'}" Width="120"/>
                            <DataGridTemplateColumn Header="Рішення" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="👁" ToolTip="Переглянути" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                    Style="{StaticResource ActionBtnStyle}" Background="{StaticResource TextSecondary}" Padding="0" Width="35" Height="30" Margin="0,0,5,0"/>
                                            <Button Content="✓" ToolTip="Погодити" Command="{Binding DataContext.ApproveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource SuccessGreen}" Padding="0" Width="35" Height="30" Margin="0,0,5,0"/>
                                            <Button Content="✕" ToolTip="Відхилити" Command="{Binding DataContext.RejectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Style="{StaticResource ActionBtnStyle}" Background="{StaticResource DangerRed}" Padding="0" Width="35" Height="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- 4. МОЇ ЗАВДАННЯ (З РОЗДІЛЕННЯМ) -->
            <TabItem Header="Мої завдання">
                <TabControl BorderThickness="0" Background="Transparent" Margin="0,10,0,0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="15,5"/>
                        </Style>
                    </TabControl.Resources>

                    <!-- АКТИВНІ -->
                    <TabItem Header="Активні">
                        <DataGrid ItemsSource="{Binding MyActiveTasks}" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal"
                                  Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="45">
                            <DataGrid.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                            </DataGrid.InputBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Request.Id}" Width="50"/>
                                <DataGridTextColumn Header="Тема" Binding="{Binding Request.Title}" Width="*"/>
                                <DataGridTextColumn Header="Пріоритет" Binding="{Binding Request.Priority.Name}" Width="100"/>
                                <DataGridTemplateColumn Header="Статус" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="10" Padding="8,2" Background="{StaticResource BackgroundLight}">
                                                <TextBlock Text="{Binding Status.Name}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Дедлайн" Binding="{Binding Request.Deadline, StringFormat='dd.MM.yyyy'}" Width="100"/>

                                <DataGridTemplateColumn Header="Дії" Width="160">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="👁" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource TextSecondary}" Width="30" Height="30" Margin="0,0,5,0" ToolTip="Переглянути деталі"/>

                                                <!-- Кнопка ПАУЗА (якщо не на паузі) -->
                                                <Button Content="⏸" Command="{Binding DataContext.PauseTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                                        Width="30" Height="30" Margin="0,0,5,0" ToolTip="На паузу">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource ActionBtnStyle}">
                                                            <Setter Property="Background" Value="{StaticResource WarningOrange}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status.Name}" Value="На паузі">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <!-- Кнопка ВІДНОВИТИ (тільки якщо на паузі) -->
                                                <Button Content="▶" Command="{Binding DataContext.ResumeTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                                        Width="30" Height="30" Margin="0,0,5,0" ToolTip="Відновити">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource ActionBtnStyle}">
                                                            <Setter Property="Background" Value="#3498DB"/>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status.Name}" Value="На паузі">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <!-- Кнопка ВИКОНАТИ -->
                                                <Button Content="✓" Command="{Binding DataContext.CompleteTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                                        Style="{StaticResource ActionBtnStyle}" Background="{StaticResource SuccessGreen}" Width="30" Height="30" ToolTip="Виконати"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- ВИКОНАНІ -->
                    <TabItem Header="Виконані">
                        <DataGrid ItemsSource="{Binding MyCompletedTasks}" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal"
                                  Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="45">
                            <DataGrid.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                            </DataGrid.InputBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Request.Id}" Width="50"/>
                                <DataGridTextColumn Header="Тема" Binding="{Binding Request.Title}" Width="*"/>
                                <DataGridTextColumn Header="Пріоритет" Binding="{Binding Request.Priority.Name}" Width="100"/>
                                <DataGridTemplateColumn Header="Статус" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="10" Padding="8,2" Background="#D5F5E3">
                                                <TextBlock Text="{Binding Status.Name}" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}" HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Виконано" Binding="{Binding CompletedAt, StringFormat='dd.MM.yyyy HH:mm'}" Width="140"/>
                                <DataGridTemplateColumn Header="Дії" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="👁" Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" 
                                                    Style="{StaticResource ActionBtnStyle}" Background="{StaticResource TextSecondary}" Width="30" Height="30" ToolTip="Переглянути деталі"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>