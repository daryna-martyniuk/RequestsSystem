<Window x:Class="Requests.UI.Views.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мій Профіль" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White" WindowStyle="None" AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="TextGray" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PrimaryBlue}" BorderThickness="1" CornerRadius="10" Background="White">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Редагування профілю" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" HorizontalAlignment="Center"/>
                <Separator Margin="0,10,0,0" Background="#F0F0F0"/>
            </StackPanel>

            <!-- Поля -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="ПІБ" FontWeight="SemiBold" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>

                <TextBlock Text="Email" FontWeight="SemiBold" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>

                <Separator Margin="0,10,0,15" Background="#F0F0F0"/>
                <TextBlock Text="Зміна пароля" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,10"/>

                <TextBlock Text="Старий пароль" FontWeight="SemiBold" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding OldPassword, UpdateSourceTrigger=PropertyChanged}" Padding="8" Margin="0,0,0,15"/>
                <!-- В ідеалі тут має бути PasswordBox, але для біндингу у VM часто використовують TextBox або спеціальні помічники. 
                     Для простоти можна використати TextBox, але це небезпечно (видно символи). 
                     Краще використати PasswordBox і передавати його як параметр, як ми робили в LoginWindow. 
                     Але OldPassword потрібен для перевірки. Давай зробимо OldPassword теж через параметр або (простіше) 
                     просто TextBox, якщо це навчальний проєкт. Або PasswordBox + CodeBehind. -->

                <TextBlock Text="Новий пароль" FontWeight="SemiBold" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="NewPasswordBox" Padding="8" Margin="0,0,0,5" BorderBrush="#BDC3C7" BorderThickness="1"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Скасувати" Command="{Binding CancelCommand}" IsCancel="True" 
                        Background="Transparent" Foreground="{StaticResource TextGray}" BorderThickness="0" 
                        FontSize="14" FontWeight="SemiBold" Padding="15,5" Cursor="Hand"/>

                <Button Content="Зберегти" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=NewPasswordBox}"
                        Background="{StaticResource PrimaryBlue}" Foreground="White" BorderThickness="0"
                        FontSize="14" FontWeight="Bold" Padding="25,10" Margin="15,0,0,0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>